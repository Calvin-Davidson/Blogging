    input {
        margin-bottom:  1rem;
    }
    
</style>


<p>@DisplayName</p>
<input type="checkbox" checked="@FieldValue"/>

@code {
    [Parameter]
    public string DisplayName { get; set; } = "";

    [Parameter]
    public bool FieldValue { get; set; } = false;
}